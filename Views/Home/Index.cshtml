@Model MusicAudioPlayer.ViewModels.HomeMyplaylistViewModel

        <div class="middle">
             <div class="entry-info dark-title">
                <h1>Bienvenue sur votre site de musique</h1>
                <p>Ecoutez de la musique partout où vous êtes.</p>
                <a class="btn-create text-color-white" href="">Créer une nouvelle playlist</a>
            </div>
            <div class="picture">
                <img src="~/images/picture.jpg" height="500" alt="">
            </div>
        </div>

        <div class="">
            <div class="play-list-row">
                <h2 class="text-color-white">Mes playlists</h2>
                @foreach(var playlist in Model.Myplaylist){
                    <div class="play-list-item">
                        <img src="@Url.Content(playlist.imagePath)" height="200" alt="">
                        <p class="text-color-white">@playlist.title</p>
                        <button class="btn-playlsit text-color-white">Renommer</button>
                        @Html.ActionLink("Afficher", "Display", "Playlist", new {Id = playlist.Id}, new {@class="btn-playlsit text-color-white"})
                    </div>
                }
            </div>
        </div>